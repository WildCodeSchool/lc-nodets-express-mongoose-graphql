datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

model Skill {
  id       Int     @id @default(autoincrement())
  votes    Int     @default(0)
  title    String
  Wilder   Wilder? @relation(fields: [wilderId], references: [id])
  wilderId Int?
}

model Wilder {
  id     Int     @id @default(autoincrement())
  name   String
  city   String
  skills Skill[]
}
